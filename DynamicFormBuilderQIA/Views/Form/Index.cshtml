@* Views/Form/Index.cshtml *@

@{
    ViewData["Title"] = "History - Forms List";
}

@section Styles {
    <link rel="stylesheet" href="~/css/formIndex.css" />
}

<!-- Toast Container -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    @if (TempData["SuccessMessage"] != null)
    {
        <div id="successToast" class="toast toast-success align-items-center border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <strong>Success!</strong> @TempData["SuccessMessage"]
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div id="errorToast" class="toast toast-error align-items-center border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <strong>Error!</strong> @TempData["ErrorMessage"]
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }
</div>

<div class="history-container">
    <div class="card shadow-sm">
        <div class="card-header bg-light border-bottom fw-semibold d-flex justify-content-between align-items-center">
            <div class="fw-bold">
                <i class="fas fa-history"></i> History
            </div>

            <a href="@Url.Action("Create", "Form")" class="btn btn-success">
                <i class="fas fa-plus"></i> Create New Form
            </a>
        </div>

        <div class="card-body">
            

            <table id="formsTable" class="table table-striped table-bordered" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th>Form Title</th>
                        <th>Created Date</th>
                        <th>Fields Count</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Data will be loaded via AJAX -->
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal Preview -->
<div class="modal fade" id="formPreviewModal" tabindex="-1" aria-labelledby="formPreviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title" id="formPreviewModalLabel">
                    <i class="fas fa-tags"></i> Dynamic Form Builder
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalFormContent">
                <div class="text-center py-5">
                    <i class="fa fa-spinner fa-spin fa-3x fa-fw"></i>
                    <p class="mt-3">Loading form preview...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                     Close
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Show toasts if they exist
            @if (TempData["SuccessMessage"] != null)
            {
                        <text>
                        showToast('successToast');
                        </text>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                        <text>
                        showToast('errorToast');
                        </text>
            }

            var table = $('#formsTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '/api/FormApi/GetFormsDataTable',
                    type: 'POST',
                    contentType: 'application/json',
                    data: function(d) {
                        console.log('Request:', d);
                        return JSON.stringify(d);
                    },
                    error: function(xhr, error, thrown) {
                        console.error('Error:', error);
                        console.error('Response:', xhr.responseText);
                        alert('Error loading forms data. Please try again.');
                    }
                },
                 columnDefs: [
                    {
                        targets: 3,                  
                        className: "action-col"     
                    }
                ],
                columns: [
                    { data: 'formTitle', name: 'FormTitle' },
                    { data: 'createdDate', name: 'CreatedDate' },
                    { data: 'fieldCount', name: 'FieldCount', orderable: false, searchable: false },
                    {
                        data: 'actions',
                        name: 'Actions',
                        orderable: false,
                        searchable: false,
                        render: function(data, type, row) {
                            return data;
                        }
                    }
                ],
                order: [[1, 'desc']],
                pageLength: 10,
                lengthMenu: [[10, 25, 50, 100], [10, 25, 50, 100]],
                language: {
                    processing: '<i class="fa fa-spinner fa-spin fa-3x fa-fw"></i><span class="sr-only">Loading...</span>',
                    emptyTable: 'No forms available',
                    zeroRecords: 'No matching forms found',
                    searchPlaceholder: 'Search by Form Title'
                }
            });
             // Handle modal preview click
            $(document).on('click', '.btn-modal-preview', function(e) {
                e.preventDefault();
                var formId = $(this).data('form-id');
                loadFormPreview(formId);
            });
        });

        function showToast(toastId) {
            let toastEl = document.getElementById(toastId);
            if (toastEl) {
                let toast = new bootstrap.Toast(toastEl, {
                    autohide: true,
                    delay: 5000
                });
                toast.show();
            }
        }
        function loadFormPreview(formId) {
            // Show modal
            var modal = new bootstrap.Modal(document.getElementById('formPreviewModal'));
            modal.show();

            // Show loading state
            $('#modalFormContent').html(`
                <div class="text-center py-5">
                    <i class="fa fa-spinner fa-spin fa-3x fa-fw"></i>
                    <p class="mt-3">Loading form preview...</p>
                </div>
            `);

            // Load form content via AJAX
            $.ajax({
                url: '/api/FormApi/GetFormPreview/' + formId,
                type: 'GET',
                success: function(response) {
                    $('#modalFormContent').html(response);
                },
                error: function(xhr, status, error) {
                    $('#modalFormContent').html(`
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Error!</strong> Failed to load form preview. Please try again.
                        </div>
                    `);
                    console.error('Error loading form preview:', error);
                }
            });
        }
    </script>
}