@model DynamicFormBuilderQIA.Models.Form
@{
    ViewData["Title"] = "Preview - " + Model.FormTitle;
    var fieldOptions = ViewBag.FieldOptions as List<DynamicFormBuilderQIA.Models.FieldOption>;
}
@section Styles {
    <style>
        .preview-container {
            max-width: 900px;
            margin: 30px auto;
        }

        .required-asterisk {
            color: #dc3545;
            font-weight: bold;
            margin-left: 4px;
        }

        .form-info {
            background: #e9ecef;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 20px;
        }
    </style>
}

<div class="preview-container">
    <div class="card shadow-sm">
        <div class="card-header bg-light border-bottom fw-bold">
            <i class="fas fa-tags"></i> Dynamic Form Builder
        </div>
        <div class="card-body">
            <div class="form-info">
                <strong>Form Title:</strong> @Model.FormTitle<br>
                <small class="text-muted">Created: @Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</small>
            </div>
            <form id="previewForm">
                @foreach (var field in Model.FormFields)
                {
                    @await Component.InvokeAsync("Dropdown", new
                    {
                        fieldId = $"field_{field.FieldId}",
                                fieldName = $"field_{field.FieldId}",
                                fieldLabel = field.FieldLabel,
                                isRequired = field.IsRequired,
                                options = fieldOptions,
                                selectedValue = field.SelectedOption
                                })
                                }
                <div class="mt-4">
                    <a href="@Url.Action("Index", "Form")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>